= form_for @bar do |f|
  %div.form-group
    = f.label :name
    = f.text_field :name, :autofocus => true, :class=> 'form-control'
  %div.form-group
    = f.label :email
    = f.text_field :email, :class=> 'form-control'
  %div.form-group
    = f.label :image
    = f.text_field :image, :class=> 'form-control'
  %div.form-group
    = f.label :address
    = f.text_field :address, :class=> 'form-control'
  %div.form-group
    = f.label :city
    = f.text_field :city, :class=> 'form-control'
  %div.form-group
    = f.label :events
    = f.text_field :events, :class=> 'form-control'
  %div.form-group
    = f.label :opening_hours
    = f.text_field :opening_hours, :class=> 'form-control'
    = f.submit